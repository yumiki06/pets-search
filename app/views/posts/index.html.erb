<div class="contents row">
  <% @posts.each do |post| %>
    <div class="content_post" style="background-image: url(<%= post.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', "/tweets/#{post.id}", method: :delete %>
          </li>
        </ul>
      </div>
      <%= simple_format(post.text) %>
      <span class="name">
        <%= post.name %>
      </span>
    </div>
  <% end %>
</div>